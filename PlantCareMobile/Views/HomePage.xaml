<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantCareMobile.Views.HomePage"
             Title="Panel de Inicio"
             Shell.ForegroundColor="#05DF73"
             Shell.BackgroundColor="#101928"
             BackgroundColor="#101928">
    <ScrollView>
        <StackLayout Orientation="Vertical"
                     Margin="15"
                     Spacing="20">
            <!--Bienvenida del usuario-->
            <VerticalStackLayout>
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Â¡Hola, "
                                  FontFamily="RobotoVar"
                                  FontAttributes="Bold"
                                  FontSize="28" />
                            <Span Text="Andres"
                                  FontFamily="RobotoVar"
                                  FontAttributes="Bold"
                                  FontSize="28" />
                            <Span Text=" ðŸŒ±"
                                  FontFamily="RobotoVar"
                                  FontAttributes="Bold"
                                  FontSize="28" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label >
                <Label Text="Bienvenido a tu jardin digital"
                       FontFamily="RobotoVar"
                       FontAttributes="Bold"
                       TextColor="#99A1AF"
                       FontSize="14" />
            </VerticalStackLayout>

            <!--Seccion para identificar planta-->
            <Border StrokeShape="RoundRectangle 15"
                    BackgroundColor="#162032"
                    StrokeThickness="0"
                    Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Text="ðŸŒ¿ Identificar Nueva Planta"
                               TextColor="#4ADE80"
                               FontAttributes="Bold"
                               FontSize="18"
                               VerticalOptions="Center" />
                        <Border Grid.Column="2"
                                HeightRequest="35"
                                WidthRequest="35"
                                StrokeShape="Ellipse"
                                StrokeThickness="0"
                                BackgroundColor="#0D542B">
                            <Image Source="help_icon.png"
                                   WidthRequest="25"
                                   HeightRequest="25"/>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="HelpUploadAreaTapped"/>
                            </Border.GestureRecognizers>

                        </Border>
                       
                    </Grid>

                    <Label Text="Sube una foto para identificar cualquier planta y agregarla a tu colecciÃ³n"
                           TextColor="#D1D5DB"
                           FontSize="14" />

                    <Border Stroke="#4B5563"
                            StrokeThickness="1"
                            StrokeDashArray="4,4"
                            StrokeShape="RoundRectangle 10"
                            BackgroundColor="Transparent"
                            HeightRequest="150"
                            Padding="20">

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUploadAreaTapped" />
                        </Border.GestureRecognizers>

                        <VerticalStackLayout VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="10">
                            <Image Source="upload_icon.png"
                                   HeightRequest="40"
                                   WidthRequest="40" />

                            <Label HorizontalTextAlignment="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Pulsa aqui"
                                              TextColor="#4ADE80"
                                              FontAttributes="Bold" />
                                        <Span Text=" para subir una imagen"
                                              TextColor="#9CA3AF" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label Text="PNG, JPG, GIF hasta 10MB"
                                   TextColor="#6B7280"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- ðŸ”„ LOADING INDICATOR - AGREGAR ESTO -->
                    <StackLayout x:Name="LoadingIndicator"
                                 IsVisible="False"
                                 HorizontalOptions="Center" 
                                 Spacing="10"
                                 Orientation="Horizontal">
                        <ActivityIndicator IsRunning="True" 
                                           Color="#4ADE80" 
                                           WidthRequest="25"
                                           HeightRequest="25" />
                        <Label Text="ðŸ” Identificando planta..."
                               TextColor="#4ADE80"
                               VerticalOptions="Center"
                               FontSize="14" />
                    </StackLayout>

                </VerticalStackLayout>
            </Border>

            <!-- Resto de secciones igual... -->
            <!--Seccion "Mi Jardin"-->
            <Label Text="Mi JardÃ­n"
       FontSize="24"
       FontAttributes="Bold"
       TextColor="White" />
            <Label Text="Ver todos â†’"
       TextColor="LightBlue"
       FontAttributes="Bold"
       HorizontalOptions="End"
       Margin="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="VerTodos_Tapped"/>

                </Label.GestureRecognizers>
            </Label>

            <CollectionView x:Name="ListaPlantas"
                HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 10"
                    BackgroundColor="#203042"
                    Padding="10"
                    Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding NombreCientifico}"
                           TextColor="White"
                           FontAttributes="Bold"/>
                                <Label Text="{Binding FechaGuardado, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                           TextColor="#A1A1A1"
                           FontSize="12"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--Seccion "Recordatorios"-->
            <Border StrokeShape="RoundRectangle 15"
                    BackgroundColor="#162032"
                    StrokeThickness="0"
                    Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ“… Recordatorios"
                           TextColor="#60A5FA"
                           FontAttributes="Bold"
                           FontSize="16" />

                    <VerticalStackLayout Spacing="5"
                                         VerticalOptions="Center">
                        <Image Source="plant_placeholder.png"
                               HeightRequest="40" />
                        <Label Text="Riego pendiente"
                               TextColor="White"
                               FontSize="12"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--TIPS DE CUIDADO-->
            <Border StrokeShape="RoundRectangle 15"
                    BackgroundColor="#162032"
                    StrokeThickness="0"
                    Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ’¡ Tips de Cuidado"
                           TextColor="#FBBF24"
                           FontAttributes="Bold"
                           FontSize="18" />
                    <Label Text="Consejos diarios para tus plantas..."
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>