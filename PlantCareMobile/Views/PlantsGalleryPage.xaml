                    SelectionMode="Single"
                    SelectionChanged="OnPlantaSeleccionada"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border StrokeShape="RoundRectangle 10"
        BackgroundColor="#203042"
        Padding="10"
