                                                 Padding="15,0">
                                <Label Text="{Binding DisplayName}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       LineBreakMode="TailTruncation"/>
                                
                                <Label Text="{Binding WateringStatus}"
