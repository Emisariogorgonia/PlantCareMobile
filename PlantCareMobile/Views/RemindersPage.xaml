<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PlantCareMobile.ViewModels"
             xmlns:models="clr-namespace:PlantCareMobile.Models"
             x:Class="PlantCareMobile.Views.RemindersPage"
             Title="Recordatorios"
             Shell.BackgroundColor="#101928"
             BackgroundColor="#101928">

    <Grid RowDefinitions="Auto, *" Padding="20">
        
        <VerticalStackLayout Grid.Row="0" Margin="0,0,0,20">
