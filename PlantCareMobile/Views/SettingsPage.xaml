            <Border StrokeShape="RoundRectangle 12"
                    BackgroundColor="#162032"
                    StrokeThickness="0"
                    Padding="20"
                    Margin="0,0,0,20">

                <VerticalStackLayout Spacing="20">

                    <HorizontalStackLayout Spacing="10"
                                           VerticalOptions="Center">
                        <Image Source="data_icon.png"
                               HeightRequest="25"
                               WidthRequest="25" />
                        <Label Text="Gestión de Datos"
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>


                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="8">
                            <Image Source="export_icon.png"
                                   HeightRequest="18"
                                   WidthRequest="18" />
                            <Label Text="Exportar Datos"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   FontSize="16" />
                        </HorizontalStackLayout>

                        <Label Text="Descarga una copia de todos tus datos de PlantCare en formato JSON. Incluye plantas, recordatorios, fotos y preferencias."
                               TextColor="#9CA3AF"
                               FontSize="13" />

                        <Button Text="Exportar Datos"
                                BackgroundColor="#2563EB"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="45"
                                HorizontalOptions="Start"
                                ImageSource="download_icon.png"
                                ContentLayout="Left,10" />
                    </VerticalStackLayout>


                    <BoxView HeightRequest="1"
                             Color="#374151"
                             Opacity="0.5" />

                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="8">
                            <Image Source="trash_icon.png"
                                   HeightRequest="18"
                                   WidthRequest="18" />
                            <Label Text="Eliminar Todos los Datos"
                                   TextColor="#EF4444"
                                   FontAttributes="Bold"
                                   FontSize="16" />
                        </HorizontalStackLayout>

                        <Label FontSize="13"
                               TextColor="#9CA3AF">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="⚠️ Acción irreversible: "
                                          TextColor="#FBBF24"
                                          FontAttributes="Bold" />
                                    <Span Text="Esta acción eliminará permanentemente todos tus datos de PlantCare, incluyendo plantas, recordatorios, fotos y configuraciones." />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Button Text="Eliminar Todos los Datos"
                                BackgroundColor="#DC2626"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="45"
                                HorizontalOptions="Start"
                                ImageSource="warning_icon.png"
                                ContentLayout="Left,10" />
                    </VerticalStackLayout>

