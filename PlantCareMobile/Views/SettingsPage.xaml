             Shell.BackgroundColor="#101928"
             BackgroundColor="#101928">
    <ScrollView>
        <StackLayout  Orientation="Vertical"
                      Margin="15"
                      Spacing="20">
            <Label Text="⚙️ Configuración"
                   FontSize="28"
                   FontFamily="RobotoVar"/>

            <!--Seccion de Notificaciones-->
            <Border StrokeShape="RoundRectangle 12"
                    BackgroundColor="#162032"
                    StrokeThickness="0"
                    Padding="20"
                    Margin="0,0,0,20">
                <VerticalStackLayout Spacing="20">

                    <HorizontalStackLayout Spacing="10"
                                           VerticalOptions="Center">
                        <Image Source="email_icon.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               VerticalOptions="Center" />

                        <Label Text="Notificaciones"
                               TextColor="White"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Grid ColumnDefinitions="*, Auto">
                        <VerticalStackLayout Grid.Column="0"
                                             Spacing="2"
                                             VerticalOptions="Center">
                            <Label Text="Notificaciones por email"
                                   TextColor="White"
                                   FontSize="15" />
                            <Label Text="Recibir recordatorios y actualizaciones por correo"
                                   TextColor="#9CA3AF"
                                   FontSize="12" />
                        </VerticalStackLayout>

                        <Switch Grid.Column="1"
                                IsToggled="True"
                                OnColor="#05DF73"
                                ThumbColor="White" />
                    </Grid>

                    <Grid ColumnDefinitions="*, Auto">
                        <VerticalStackLayout Grid.Column="0"
                                             Spacing="2"
                                             VerticalOptions="Center">
                            <Label Text="Recordatorios de cuidado"
                                   TextColor="White"
                                   FontSize="15" />
                            <Label Text="Alertas sobre riego, fertilización y otros cuidados"
                                   TextColor="#9CA3AF"
                                   FontSize="12" />
                        </VerticalStackLayout>

                        <Switch Grid.Column="1"
                                IsToggled="True"
                                OnColor="#05DF73"
                                ThumbColor="White" />
                    </Grid>

                    <Grid ColumnDefinitions="*, Auto">
                        <VerticalStackLayout Grid.Column="0"
                                             Spacing="2"
                                             VerticalOptions="Center">
                            <Label Text="Actualizaciones de plantas"
                                   TextColor="White"
                                   FontSize="15" />
                            <Label Text="Información sobre el crecimiento y estado de tus plantas"
                                   TextColor="#9CA3AF"
                                   FontSize="12" />
                        </VerticalStackLayout>

                        <Switch Grid.Column="1"
                                IsToggled="True"
                                OnColor="#05DF73"
                                ThumbColor="White" />
                    </Grid>

                </VerticalStackLayout>
            </Border>

